{
  "name": "cline-mcp-server",
  "version": "0.1.0",
  "description": "A Model Context Protocol server",
  "private": true,
  "type": "module",
  "bin": {
    "cline-mcp-server": "./build/index.js"
  },
  "files": [
    "build"
  ],
  "scripts": {
    "build": "tsc && chmod +x build/index.js",
    "start": "node build/index.js",
    "prepare": "npm run build",
    "watch": "tsc --watch",
    "inspector": "npx @modelcontextprotocol/inspector build/index.js",
    "test": "NODE_OPTIONS=--experimental-vm-modules jest --config ./jest.config.js --coverage",
    "test:watch": "NODE_OPTIONS=--experimental-vm-modules jest --watch",
    "test:ci": "NODE_OPTIONS=--experimental-vm-modules jest --ci --runInBand --coverage"
  },
  "dependencies": {
    "@modelcontextprotocol/sdk": "^1.18.0",
    "ajv": "^8.17.1",
    "dotenv": "^16.4.5",
    "jira.js": "^3.0.1"
  },
  "devDependencies": {
    "@testing-library/jest-dom": "^6.6.3",
    "@types/jest": "^29.5.14",
    "@types/node": "^20.17.30",
    "jest": "^29.7.0",
    "ts-jest": "^29.3.1",
    "typescript": "^5.3.3"
  }
}
